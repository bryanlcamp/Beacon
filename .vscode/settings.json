{
    // Beacon Platform VS Code Configuration
    // Optimized for Remote SSH Development
    // Editor Settings
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.formatOnSave": true,
    "editor.rulers": [],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    // File Settings
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    // HTML/CSS/JS Settings for Beacon Frontend
    "html.format.indentInnerHtml": true,
    "css.validate": true,
    "[html]": {
        "editor.tabSize": 4
    },
    "[css]": {
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 2
    },
    // Beacon-specific file associations
    "files.associations": {
        "*.settings.exchange": "json",
        "*.data": "plaintext"
    },
    // GitHub Issues Configuration
    "github-issues.queries": [
        {
            "label": "ðŸ  My Beacon Issues",
            "query": "assignee:@me repo:bryanlcamp/beacon-web repo:bryanlcamp/beacon-core"
        },
        {
            "label": "ðŸ”¥ Critical Issues",
            "query": "is:open label:severity:critical repo:bryanlcamp/beacon-web repo:bryanlcamp/beacon-core"
        },
        {
            "label": "ðŸŽ¨ CSS Issues",
            "query": "is:open label:component:css repo:bryanlcamp/beacon-web repo:bryanlcamp/beacon-core"
        },
        {
            "label": "âš ï¸ Needs Triage",
            "query": "is:open label:status:needs-triage repo:bryanlcamp/beacon-web repo:bryanlcamp/beacon-core"
        },
        {
            "label": "ðŸ”§ Build Issues",
            "query": "is:open label:component:build-system repo:bryanlcamp/beacon-core"
        },
        {
            "label": "âš¡ Performance Issues",
            "query": "is:open label:type:performance repo:bryanlcamp/beacon-web repo:bryanlcamp/beacon-core"
        },
        {
            "label": "ðŸ“ All Open Issues",
            "query": "is:open repo:bryanlcamp/beacon-web repo:bryanlcamp/beacon-core"
        }
    ],
    "github.remoteRepositories": [
        "bryanlcamp/beacon-web",
        "bryanlcamp/beacon-core"
    ],
    "githubIssues.workingIssue.enabled": true,
    "githubIssues.createInsertFormat": "number",
    "githubIssues.ignoreMilestones": false,
    "githubPullRequests.pullBranch": "never",
    "githubPullRequests.showInSCM": true,
    "githubIssues.queries": [
        {
            "label": "ðŸ“‹ Beacon Issues",
            "query": "repo:bryanlcamp/beacon-web repo:bryanlcamp/beacon-core"
        }
    ],
    // Workspace Layout Settings - Minimal focused layout
    "workbench.startupEditor": "none",
    "workbench.sideBar.location": "left",
    "workbench.panel.defaultLocation": "right",
    "workbench.panel.opensMaximized": "never",
    "workbench.statusBar.visible": false,
    "explorer.openEditors.visible": 0,
    "explorer.autoReveal": false,
    "problems.autoReveal": false,
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.showExitAlert": false,
    "git.openRepositoryInParentFolders": "always",
    "git.autofetch": true,
    "scm.defaultViewMode": "tree",
    "workbench.view.alwaysShowHeaderActions": false,
    "breadcrumbs.enabled": false,
    // Focus on essential views only
    "workbench.view.extension.github-issues.visibility": "visible",
    "github.copilot.enable": true,
    "github.copilot.chat.enabled": true,
    "workbench.activityBar.iconClickBehavior": "focus",
    "workbench.editor.showTabs": "single",
    "workbench.editor.openPositioning": "first",
    // Auto-open GitHub view on startup
    "workbench.view.extensions.github.showPanel": true,
    "github.copilot.chat.welcomeMessage": "disabled",
    // GitHub Issues Sprint Configuration
    "github.issues.queries": [
        {
            "label": "ðŸ”¥ Current Sprint",
            "query": "is:open is:issue milestone:\"Sprint 1\" repo:bryanlcamp/beacon-core repo:bryanlcamp/beacon-web-ui repo:bryanlcamp/beacon-webserver-api"
        },
        {
            "label": "ðŸ“‹ Next Sprint",
            "query": "is:open is:issue milestone:\"Sprint 2\" repo:bryanlcamp/beacon-core repo:bryanlcamp/beacon-web-ui repo:bryanlcamp/beacon-webserver-api"
        },
        {
            "label": "ðŸŽ¯ My Issues",
            "query": "is:open is:issue assignee:@me"
        },
        {
            "label": "ðŸ› Bugs",
            "query": "is:open is:issue label:bug"
        },
        {
            "label": "âœ¨ Features",
            "query": "is:open is:issue label:enhancement"
        },
        {
            "label": "ðŸ“¦ Backlog",
            "query": "is:open is:issue no:milestone"
        },
        {
            "label": "âœ… Recently Closed",
            "query": "is:closed is:issue updated:>2024-02-01"
        }
    ],
    "github.issues.createInsertFormat": "number",
    "git.inputValidationSubjectLength": 72,
    // Enhanced Git workflow configuration
    "git.enableCommitSigning": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "scm.defaultViewMode": "tree",
    "gitlens.views.repositories.showBranchComparison": "working",
    "gitlens.statusBar.enabled": true
}
